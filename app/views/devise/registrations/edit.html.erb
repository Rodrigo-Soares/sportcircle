<h2>Edit <%= resource_name.to_s.humanize %></h2>
<div class="well">
  <div class="row">
      <div class="span1"></div>
      <div class="span5">
        <%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :method => :put }) do |f| %>
          <%= devise_error_messages! %>

          <%= f.input :profile_name %>

          <%= f.input :first_name %>

          <%= f.input :last_name %>

          <%= f.input :email %>

          <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
            <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
          <% end %>

          
          <%= f.input :password, :autocomplete => "off", label: "New password", placeholder: "Keep blank if not changing it." %>

          <%= f.input :confirm_password, label: "Confirm New password" %>

          <%= f.input :current_password, hint: "We need your current password to confirm your changes" %>

          <%= f.button :submit, "Save", class:"btn btn-success" %>
        <% end %>
      </div>
      <div class="span4 offset1">

      
        <%= image_tag @user.gravatar_url, class: "img-polaroid" %>

        <h3>Cancel my account</h3>

        <p>Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), :data => { :confirm => "Are you sure?" }, :method => :delete %></p>

      </div>
    </div>
</div>